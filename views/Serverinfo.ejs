<%- include("compo/header") -%>
<body>
<!-- partial:index.partial.html -->
<form ref='uploadForm' 
			id='uploadForm' 
			action='/api/upload/<%=serverName%>' 
			method='post' 
			encType="multipart/form-data" style="opacity: 0;">
				<input type='submit' value='Upload!' />
		</form>		
<div class="ui text container">
  <div class="ui inverted top attached tabular menu">
    <a class="item active" data-tab="first">Presets</a>
    <a class="item" data-tab="second">Firmware</a>
  </div>
  <div class="ui bottom attached tab inverted segment active" data-tab="first">
    <p><%=(serverName).replaceAll("__","/")%>/</p>
    <button class="ui compact icon button" id="upload" onclick="UploadFiles()">
      <i class="upload icon"></i>Upload...
    </button>
    <button class="ui compact icon button">
      <i class="plus icon"></i>New
    </button>
    <div class="ui inverted relaxed middle aligned divided list">
        <% for(const d of datad) {%> 
            <div class="item">
                <div class="right floated content">
                  <button class="tiny ui compact apply preset button">Apply...</button>
                  <div class="tiny ui left pointing dropdown compact icon button">
                    More
                    <i class="dropdown icon"></i>
                    <div class="menu">
                      <div class="item">
                        <i class="download icon"></i> Download</div>
                      <div class="divider"></div>
                      <div class="item"><i class="write icon"></i>Rename</div>
                      <div class="item"><i class="copy icon"></i>Make a copy</div>
                      <div class="divider"></div>
                      <div class="item">
                        <i class="trash icon"></i>Delete
                      </div>
                    </div>
                  </div>
                </div>
                <i class="large folder open outline middle aligned icon" onclick='window.open("/server/<%=serverName%>__<%=d.dir%>", "_self");'></i>
                <div class="content floated">
                  <h4 class="ui header"><%=d.dir%></h4>
                  <div class="description">Updated 17 mins ago</div>
                </div>
              </div>
        <% } %>
        <% for(const d of dataf) {%> 
        <div class="item">
            <div class="right floated content">
              <button class="tiny ui compact apply preset button">Apply...</button>
              <div class="tiny ui left pointing dropdown compact icon button">
                More
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item">
                    <i class="download icon"></i> Download</div>
                  <div class="divider"></div>
                  <div class="item"><i class="write icon"></i>Rename</div>
                  <div class="item"><i class="copy icon"></i>Make a copy</div>
                  <div class="divider"></div>
                  <div class="item">
                    <i class="trash icon"></i>Delete
                  </div>
                </div>
              </div>
            </div>
            <i class="large file outline middle aligned icon" onclick='window.open("/api/readFile/<%=serverName%>__<%=d.file%>", "_self");'></i>
            <div class="content floated">
              <h4 class="ui header"><%=d.file%></h4>
              <div class="description">Updated 17 mins ago</div>
            </div>
          </div>
        <% } %>
    </div>
  </div>
  <div class="ui bottom attached tab inverted segment" data-tab="second">
    <div class="ui compact icon button">
      <i class="upload icon"></i>Upload...
    </div>
    <div class="ui inverted relaxed middle aligned divided list">
      <div class="item">
        <div class="right floated content">
          <button class="tiny ui compact download firmware button">Install...</button>
          <div class="tiny ui left pointing dropdown compact icon button">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="disabled item">
                <i class="download icon"></i>Download
              </div>
              <div class="divider"></div>
              <div class="disabled item">
                <i class="trash icon"></i>Delete
              </div>
            </div>
          </div>
        </div>
        <i class="large cloud download middle aligned icon"></i>
        <div class="content floated">
          <h4 class="disabled header">v2.1.0 / 2016-06-16 18:45</h4>
          <a class="disabled description">Release Notes</a>
        </div>
      </div>
      <div class="item">
        <div class="right floated content">
          <button class="tiny ui compact install firmware button">Install...</button>
          <div class="tiny ui left pointing dropdown compact icon button">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item">
                <i class="download icon"></i>Download
              </div>
              <div class="divider"></div>
              <div class="item">
                <i class="trash icon"></i>Delete
              </div>
            </div>
          </div>
        </div>
        <i class="large file archive outline middle aligned icon"></i>
        <div class="content floated">
          <h4 class="header">v2.0.0 / 2016-06-13 12:30</h4>
          <a class="description">Release Notes</a>
        </div>
      </div>
      <div class="item">
        <div class="right floated content">
          <button class="tiny ui compact install firmware button">Install...</button>
          <div class="tiny ui left pointing dropdown compact icon button">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item">
                <i class="download icon"></i>Download
              </div>
              <div class="divider"></div>
              <div class="item">
                <i class="trash icon"></i>Delete
              </div>
            </div>
          </div>
        </div>
        <i class="large file archive outline middle aligned icon"></i>
        <div class="content">
          <h4 class="header">v1.1.0 / 2016-06-03 15:45</h4>
          <a class="description">Release Notes</a>
        </div>
      </div>
      <div class="item">
        <div class="right floated content">
          <button class="tiny ui compact install firmware button">Install...</button>
          <div class="tiny ui left pointing dropdown compact icon button">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item">
                <i class="download icon"></i> Download</div>
              <div class="divider"></div>
              <div class="disabled item">
                <i class="trash icon"></i>Delete
              </div>
            </div>
          </div>
        </div>
        <i class="large file archive outline middle aligned icon"></i>
        <div class="content">
          <h4 class="header">v1.0.0 (Factory Default)</h4>
          <a class="description">Release Notes</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("compo/footer") -%>
