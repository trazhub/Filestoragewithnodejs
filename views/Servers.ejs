<%- include("compo/header") -%>
<body>
<!-- partial:index.partial.html -->

<div class="ui text container">
  <div class="ui inverted top attached tabular menu">
    <a class="item active" data-tab="first">Presets</a>
    <a class="item" data-tab="second">LocalMiner</a>
  </div>
  <div class="ui bottom attached tab inverted segment active" data-tab="first">
    <div class="ui inverted relaxed middle aligned divided list">
        <% for(const d of datad) {%> 
            <div class="item">
                <i class="large folder open outline middle aligned icon" onclick='window.open("/server/<%=d.dir%>", "_self");'></i>
                <div class="content floated">
                  <h4 class="ui header"><%=d.dir%></h4>
                  <div class="description">Updated 17 mins ago</div>
                </div>
              </div>
        <% } %>
        <% for(const d of dataf) {%> 
          <div class="item">
              <div class="right floated content">
                <button class="tiny ui compact apply preset button">Apply...</button>
                <div class="tiny ui left pointing dropdown compact icon button">
                  More
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <div class="item">
                      <i class="download icon"></i> Download</div>
                    <div class="divider"></div>
                    <div class="item"><i class="write icon"></i>Rename</div>
                    <div class="item"><i class="copy icon"></i>Make a copy</div>
                    <div class="divider"></div>
                    <div class="item">
                      <i class="trash icon"></i>Delete
                    </div>
                  </div>
                </div>
              </div>
              <i class="large file outline middle aligned icon" onclick='window.open("/api/readFile/<%=d.file%>", "_self");'></i>
              <div class="content floated">
                <h4 class="ui header"><%=d.file%></h4>
                <div class="description">Updated 17 mins ago</div>
              </div>
            </div>
          <% } %>
    </div>
  </div>
</div>

<%- include("compo/footer") -%>
